<!--index.wxml-->

<!-- 默认主页 -->
<view wx:if="{{action == 'index'}}" class="index">
  <view>
    <image bindtap="bindViewTap" src="data:image/svg+xml;base64," style="height: 100px; width: 100px; margin-top: 20px;"></image>
  </view>
  <view>
    <text>{{attention}}</text>
  </view>
  <button class="buInfo" bindtap="buInfo" >GoAuth食用说明 </button>
</view>

<!-- 小程序介绍页面 -->
<view wx:elif="{{action == 'appInfo'}}" class="appInfo">
  <view class="header">
    <text>\n"GoAuth"让应用轻松接入微信扫码登录\n</text>
  </view>
  <view class="content">
    <text>{{appContent}}</text>
  </view>
  <button class="buReadOver" bindtap="readOver">阅读完毕</button>
</view>

<!-- 认证授权界面 -->
<view wx:elif="{{action == 'authorize'}}" class="authorize">
  <view class="header">
    <text>认证授权界面</text>
  </view>
  <view class="authorizecontent">
    <image style="height: 70px; width: 70px; margin-top: 20px;" src="data:image/svg+xml;base64," mode="aspectFit"></image>
    <text>\n是否授权当前应用\n</text>
    <text class="referer">{{authorizeContent}}</text>
    
  </view>
  <button class="authorizeOK" bindgetuserinfo="getUserInfo" open-type="getUserInfo">确认</button>
  <button class="authorizeCancel" bindtap="authorizeCancel">取消</button>
</view>
